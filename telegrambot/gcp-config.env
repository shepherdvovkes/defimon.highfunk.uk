# Google Cloud Deployment Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id_here
GOOGLE_CLOUD_ZONE=us-central1-a
GOOGLE_CLOUD_MACHINE_TYPE=e2-micro
GOOGLE_CLOUD_DISK_SIZE=20GB

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# VM Instance Configuration
INSTANCE_NAME=telegram-bot-vm
NETWORK=default
FIREWALL_RULE=telegram-bot-allow-ssh

# Optional: Restrict bot access to specific Telegram user IDs
# Comma-separated list of user IDs (e.g., 123456789,987654321)
# Leave empty to allow all users
ALLOWED_TELEGRAM_USERS=

# Logging Configuration
LOG_LEVEL=INFO

# Bot Settings
BOT_NAME=GCloud Monitor Bot
BOT_DESCRIPTION=Monitor your Google Cloud clusters and billing information

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=5m
LOG_ROTATION_DAYS=7
LOG_ROTATION_SIZE=10M
