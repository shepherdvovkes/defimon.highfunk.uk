# L2 Networks Synchronization Environment Variables
# Copy this file to .env and configure as needed

# Beacon Chain API Configuration
BEACON_API_URL=http://localhost:5052

# Output Configuration
OUTPUT_DIR=./output

# Sync Configuration
SYNC_TIMEOUT_MS=30000
SYNC_RETRY_ATTEMPTS=3

# Validation
RUN_VALIDATION=true

# Logging
LOG_LEVEL=info
LOG_FILE=sync.log

# API Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Network Filtering
INCLUDE_TESTNETS=true
INCLUDE_MAINNETS=true
MIN_CHAIN_ID=1
MAX_CHAIN_ID=999999999

# Data Sources Configuration
ENABLE_ETHEREUM_FOUNDATION_APIS=true
ENABLE_CHAINLIST_APIS=true
ENABLE_KNOWN_NETWORKS=true
ENABLE_BEACON_CHAIN=true
