# Ethereum Node Configuration
# Copy this to .env and fill in your values

# Infura API Configuration
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here
INFURA_ENDPOINT=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}

# Ethereum Network Configuration
ETHEREUM_NETWORK=mainnet
ETHEREUM_CHAIN_ID=1

# Node Configuration
GETH_HTTP_PORT=8545
GETH_WS_PORT=8546
LIGHTHOUSE_HTTP_PORT=5052
LIGHTHOUSE_P2P_PORT=9000

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Security
JWT_SECRET_FILE=./jwtsecret
