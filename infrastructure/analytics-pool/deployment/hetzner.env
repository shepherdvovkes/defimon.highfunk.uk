# DEFIMON Analytics Pool - Hetzner Cloud Configuration
# Скопируйте этот файл в .env и настройте под ваши нужды

# Hetzner Cloud Configuration
HETZNER_API_TOKEN=your-hetzner-api-token-here
CLUSTER_NAME=defimon-analytics
CLUSTER_REGION=nbg1
CLUSTER_VERSION=1.28

# Node Pool Configuration
NODE_POOL_NAME=analytics-pool
NODE_COUNT=3
MACHINE_TYPE=cx31

# Domain Configuration
ANALYTICS_DOMAIN=analytics.highfunk.uk
ADMIN_EMAIL=admin@highfunk.uk

# Database Configuration
POSTGRES_DB=defi_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-password-here
CLICKHOUSE_DB=analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=secure-password-here
REDIS_PASSWORD=secure-password-here

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION_TIME=30d

# Storage Configuration
POSTGRES_STORAGE_SIZE=100Gi
CLICKHOUSE_STORAGE_SIZE=200Gi
REDIS_STORAGE_SIZE=50Gi
PROMETHEUS_STORAGE_SIZE=50Gi
GRAFANA_STORAGE_SIZE=20Gi

# Resource Limits
ANALYTICS_API_CPU_REQUEST=500m
ANALYTICS_API_CPU_LIMIT=1000m
ANALYTICS_API_MEMORY_REQUEST=1Gi
ANALYTICS_API_MEMORY_LIMIT=2Gi

POSTGRES_CPU_REQUEST=500m
POSTGRES_CPU_LIMIT=1000m
POSTGRES_MEMORY_REQUEST=2Gi
POSTGRES_MEMORY_LIMIT=4Gi

CLICKHOUSE_CPU_REQUEST=1000m
CLICKHOUSE_CPU_LIMIT=2000m
CLICKHOUSE_MEMORY_REQUEST=4Gi
CLICKHOUSE_MEMORY_LIMIT=8Gi

REDIS_CPU_REQUEST=250m
REDIS_CPU_LIMIT=500m
REDIS_MEMORY_REQUEST=1Gi
REDIS_MEMORY_LIMIT=2Gi

# Network Configuration
INGRESS_CLASS=nginx
CERT_MANAGER_VERSION=v1.13.3
NGINX_INGRESS_VERSION=v1.8.2

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
API_RATE_LIMIT=1000r/m
CORS_ALLOWED_ORIGINS=https://analytics.highfunk.uk,https://defimon.highfunk.uk

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
LOG_FORMAT=json
