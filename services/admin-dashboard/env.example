# Server Configuration
NODE_ENV=production
PORT=8080
HTTPS_PORT=8443

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=admin_dashboard
POSTGRES_USER=admin_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# HTTPS Configuration
SSL_CERT_PATH=/etc/ssl/certs/admin-dashboard.crt
SSL_KEY_PATH=/etc/ssl/private/admin-dashboard.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/admin-dashboard
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# Monitoring
PROMETHEUS_PORT=9091
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Push Notifications
PUSH_VAPID_PUBLIC_KEY=your_vapid_public_key_here
PUSH_VAPID_PRIVATE_KEY=your_vapid_private_key_here
PUSH_SUBJECT=mailto:admin@defimon.highfunk.uk

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@defimon.highfunk.uk
SMTP_PASSWORD=your_app_password_here
SMTP_SECURE=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Service URLs
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
ANALYTICS_API_URL=http://analytics-api:8002
AI_ML_SERVICE_URL=http://ai-ml-service:8001
BLOCKCHAIN_NODE_URL=http://blockchain-node:8545

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_PUSH_ENABLED=true
ALERT_WEBHOOK_URL=
ALERT_SLACK_WEBHOOK_URL=

# Performance
CACHE_TTL=300
SOCKET_HEARTBEAT_INTERVAL=25000
SOCKET_HEARTBEAT_TIMEOUT=60000
