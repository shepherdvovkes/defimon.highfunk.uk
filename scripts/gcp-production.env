# DEFIMON Ethereum Nodes GCP Production Configuration
# Copy this file to .env and configure with your values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_ZONE=us-central1-a

# Ethereum Node Configuration
ETHEREUM_NETWORK=mainnet
GETH_SYNC_MODE=snap
LIGHTHOUSE_CHECKPOINT_SYNC_URL=https://sync-mainnet.beaconcha.in

# Domain Configuration
DOMAIN=defimon.highfunk.uk
ADMIN_EMAIL=admin@highfunk.uk

# VM Configuration
VM_MACHINE_TYPE=e2-standard-4
VM_BOOT_DISK_SIZE=100GB
VM_BOOT_DISK_TYPE=pd-ssd
VM_DATA_DISK_SIZE=2048GB
VM_DATA_DISK_TYPE=pd-standard

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION_TIME=720h

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Security Configuration
JWT_SECRET_LENGTH=32
API_RATE_LIMIT=20r/s
METRICS_RATE_LIMIT=5r/s

# Network Configuration
GETH_MAX_PEERS=100
LIGHTHOUSE_TARGET_PEERS=100
GETH_CACHE_SIZE=4096
GETH_TXPOOL_GLOBAL_SLOTS=4096
GETH_TXPOOL_GLOBAL_QUEUE=1024

# SSL Configuration
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
SSL_CIPHERS=ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384
SSL_SESSION_CACHE=10m
SSL_SESSION_TIMEOUT=10m

# NGINX Configuration
NGINX_WORKER_CONNECTIONS=2048
NGINX_CLIENT_MAX_BODY_SIZE=100M
NGINX_GZIP_COMPRESSION_LEVEL=6

# Docker Configuration
DOCKER_NETWORK_NAME=defimon-network
DOCKER_RESTART_POLICY=unless-stopped

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_PATH=/health

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
LOG_FORMAT=json

# Performance Configuration
GETH_VERBOSITY=3
LIGHTHOUSE_MAX_SKIP_SLOTS=5
PROMETHEUS_SCRAPE_INTERVAL=15s
GRAFANA_SESSION_TIMEOUT=24h
